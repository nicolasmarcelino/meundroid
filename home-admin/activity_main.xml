<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/telaHomeAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/headerHomeAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BDCBF6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/boasVindasHomeAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:text="Olá, Lucas!"
                android:textColor="#122947"
                android:textSize="28dp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/featuresHomeAdmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            app:columnCount="2"
            app:rowCount="2">

            <Button
                android:id="@+id/buttonDigitalizacoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#172BE2"
                android:drawableLeft="@drawable/digitalizacoes_icon"
                android:text="Digitalizações" />

            <Button
                android:id="@+id/buttonCadastrarMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#172BE2"
                android:drawableLeft="@drawable/plus_icon"
                android:text="Cadastrar material" />

            <Button
                android:id="@+id/buttonEditarMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#172BE2"
                android:drawableLeft="@drawable/pencil_icon"
                android:text="Editar material" />

            <Button
                android:id="@+id/buttonEmprestimos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#172BE2"
                android:drawableLeft="@drawable/list_with_bullet_points_list"
                android:text="Empréstimo" />

            <Button
                android:id="@+id/buttonReservaEspaco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#172BE2"
                android:drawableLeft="@drawable/clock_icon"
                android:text="Reserva de espaço" />

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>